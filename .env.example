# Configuración de Entorno para Dashboard Clínica
# Copiar a .env y configurar con tus valores

# === CONFIGURACIÓN DE PUERTOS ===
FRONTEND_CLIENT_PORT=60521
BACKEND_API_PORT=60522
ADMIN_FRONTEND_PORT=60523

# === BASE DE DATOS MONGODB ===
# Usar contenedor MongoDB existente
MONGODB_URL=mongodb://host.docker.internal:60516/clinic_dashboard
MONGODB_DATABASE=clinic_dashboard

# === AUTENTICACIÓN Y SEGURIDAD ===
ADMIN_SECRET_KEY=clinic-admin-super-secret-key-2024-CHANGE-THIS
API_SECRET_KEY=clinic-api-secret-key-2024-CHANGE-THIS
ADMIN_SESSION_DURATION=24

# === CORS CONFIGURATION ===
CORS_ORIGINS=["http://localhost:60521","http://localhost:60523","http://host.docker.internal:60521","http://host.docker.internal:60523"]

# === CONFIGURACIÓN DE APLICACIÓN ===
NODE_ENV=production
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# === INICIALIZACIÓN DE DATOS ===
# Establecer en true para crear datos de prueba en primer inicio
INIT_TEST_DATA=false

# === CONFIGURACIÓN REGIONAL ===
TZ=America/Bogota
LANG=es_CO.UTF-8

# === URLs DE SERVICIOS ===
VITE_API_URL=http://localhost:60522
VITE_ADMIN_API_URL=http://localhost:60522/api

# === INTEGRACIÓN CON SERVICIOS EXTERNOS ===
# WAHA (WhatsApp API)
WAHA_API_URL=http://pampaservers.com:60513
WAHA_API_KEY=pampaserver2025enservermuA!

# N8N (Automation)
N8N_API_URL=http://dev-n8n.pampaservers.com

# === CONFIGURACIÓN DE LOGS ===
LOG_LEVEL=info
LOG_FORMAT=json

# === RECURSOS Y LÍMITES ===
MAX_UPLOAD_SIZE=10MB
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === CONFIGURACIÓN DE DESARROLLO ===
DEBUG=false
HOT_RELOAD=true